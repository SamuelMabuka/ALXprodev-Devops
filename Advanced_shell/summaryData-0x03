#!/bin/bash

DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Header for CSV
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop over JSON files and extract data
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height_dm=$(jq -r '.height' "$file") # decimetres
    weight_hg=$(jq -r '.weight' "$file") # hectograms

    # Convert to meters and kilograms
    height_m=$(echo "$height_dm" | awk '{printf "%.1f", $1/10}')
    weight_kg=$(echo "$weight_hg" | awk '{printf "%.1f", $1/10}')

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$REPORT_FILE"
done

# Display success message
echo "CSV Report generated at: $REPORT_FILE"
echo ""
cat "$REPORT_FILE"
echo ""

# Calculate averages with awk (skip header)
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; count++} 
    END {
        printf "Average Height: %.2f m\n", sum_h/count;
        printf "Average Weight: %.2f kg\n", sum_w/count;
    }' "$REPORT_FILE"

