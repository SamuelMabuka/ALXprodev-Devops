#!/bin/bash

# Extract values from JSON using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize first letter
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convert height (decimetres) to meters, weight (hectograms) to kg using awk
height_m=$(echo "$height" | awk '{printf "%.1f", $1/10}')
weight_kg=$(echo "$weight" | awk '{printf "%.0f", $1/10}')

# Print in human-readable format
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

