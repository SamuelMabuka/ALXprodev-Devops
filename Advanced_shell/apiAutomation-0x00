#!/bin/bash

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make request and capture both HTTP code and response
HTTP_CODE=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Check status
if [ "$HTTP_CODE" -ne 200 ]; then
    echo "[$(date)] ❌ Error: HTTP $HTTP_CODE when fetching data from $API_URL" >> "$ERROR_FILE"
    echo "Response:" >> "$ERROR_FILE"
    cat "$OUTPUT_FILE" >> "$ERROR_FILE"
    echo -e "\n" >> "$ERROR_FILE"
    rm "$OUTPUT_FILE"
else
    # Format JSON using jq if available
    if command -v jq &> /dev/null; then
        jq . "$OUTPUT_FILE" > "${OUTPUT_FILE}.tmp" && mv "${OUTPUT_FILE}.tmp" "$OUTPUT_FILE"
        echo "✅ Data saved and formatted in $OUTPUT_FILE"
    else
        echo "✅ Data saved to $OUTPUT_FILE (install jq for formatting)"
    fi
fi

